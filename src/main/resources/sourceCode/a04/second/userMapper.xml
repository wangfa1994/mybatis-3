<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="user">
    <!--namespace : 名称空间：与id组成sql的唯一标识
        resultType： 表明返回值类型-->
    <cache />
    <!--<cache eviction="FIFO" readOnly="true" size="512" flushInterval="600000"/> --><!--命名空间下的配置，属于此mapper下的缓存策略-->

    <select id="findById" resultType="User" parameterType="java.lang.Integer" flushCache="false" useCache="true">
        select * from user where id = #{id}
    </select>







</mapper>