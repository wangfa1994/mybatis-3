<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wf.yeecode.a02basepackage.a06reflection.a02ParamNameResolver.UserMapper">
    <select id="queryUserBySchoolName" resultType="com.wf.yeecode.a02basepackage.a06reflection.a02ParamNameResolver.User">
        SELECT * FROM `user`
            <where>
                <if test="emailAddress !=null">
                    and email = #{emailAddress}
                </if>
                <if test="age !=null">
                    and age = #{age}
                </if>
                <if test="schoolName !=null">
                    and schoolName = #{schoolName}
                </if>
            </where>
    </select>


    <select id="queryUserBySchoolNameWithParam" resultType="com.wf.yeecode.a02basepackage.a06reflection.a02ParamNameResolver.User">
        SELECT * FROM `user`
        <where>
            <if test="param1 !=null">
                and email = #{param1}
            </if>
            <if test="param2 !=null">
                and age = #{param2}
            </if>
            <if test="param3 !=null">
                and schoolName = #{param3}
            </if>
        </where>
    </select>

</mapper>